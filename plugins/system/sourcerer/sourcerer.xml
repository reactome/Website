					   default="RL_ONLY_AVAILABLE_IN_PRO" />
				<field name="@block_otherareas_css_b" type="rl_block" end="1" />

				<field name="@block_otherareas_js_a" type="rl_block" start="1" label="SRC_JAVASCRIPT" />
